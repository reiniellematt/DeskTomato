<Window x:Class="DeskTomatoUI.Views.EditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskTomatoUI.Views"
        mc:Ignorable="d"
        Title="EditView" Height="200" Width="300">
    <StackPanel Margin="12">
        <StackPanel Orientation="Horizontal">
            <Label FontSize="18" Content="Minutes"/>
            <TextBox x:Name="Minutes" VerticalAlignment="Center" FontSize="18" Width="180"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label FontSize="18" Content="Seconds"/>
            <TextBox x:Name="Seconds" VerticalAlignment="Center" FontSize="18" Width="180"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,34,12,0">
            <Button x:Name="Ok" FontSize="18" Content="OK" Padding="4" Margin="0,0,12,0"/>
            <Button x:Name="Cancel" FontSize="18" Content="Cancel" Padding="4"/>
        </StackPanel>
    </StackPanel>
</Window>
